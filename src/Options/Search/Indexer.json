{
    "Hooks":
    {
        "beforeTokenize":
        {
            "Strip Tags":
            {
                "Service": "Text.StripTags",
                "Method": "Do"
            },
            "Lowercase":
            {
                "Service": "Text.Transform.Lower",
                "Method": "Apply"
            }
        },
        "afterTokenize":
        {
            "Stop words":
            {
                "Service": "Text.StopWords",
                "Method": "Filter"
            }
        }
    }
}