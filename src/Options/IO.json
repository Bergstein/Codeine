{
    "Mixins":
    {
        "Logs": "IO.Mixins.Logs2File",
        "Behaviours": "IO.Mixins.Behaviours2File",
        "View": "View.IO",
        "Test": "Test.IO",
        "Metric": "Metric.IO.MongoRedis"
    },
    "Verbosity":
    {
        "Not found": 6
    },
    "Storages":
    {
        "Output":
        {
            "Driver": "IO.Print"
        },
        "Primary":
        {
            "Driver": "IO.Storage.Memory",
            "Description": "Default storage for all important data"
        },
        "Secondary":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Data",
            "Format": "Formats.JSON",
            "Postfix":".json",
            "Description": "Default storage for all immutable important data"
        },
        "Locks":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Locks",
            "Format": "Formats.JSON",
            "Postfix":".lock.json",
            "Description": "Default storage for locks"
        },
        "Permanent":
        {
            "Description": "Storage for source-based data",
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Data"
        },
        "Cookie":
        {
            "Driver":"IO.Storage.Cookie",
            "TTL": 86400,
            "Path": "/",
            "Secure": false,
            "HTTP Only": true
        },
        "Options":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Options",
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
        "EMail":
        {
            "Driver": "IO.Transport.Mail.SMTP",
            "From": "Unconfigured Codeine Framework <noreply@codeine-framework.org>"
        },
        "Upload":
        {
            "Driver": "IO.Storage.FileSystem",
            "Directory": "Data",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Static Sitemaps":
        {
            "Driver": "IO.Storage.FileSystem",
            "Directory": "Public/sitemap",
            "Postfix": ".xml"
        },
        "Uploader":
        {
            "Driver": "IO.Storage.FileSystem",
            "Directory": "Public/uploads",
            "Verbosity":
            {
                "Not found": 5
            }
        },
        "Web":
        {
            "Driver": "IO.Network.HTTP.CURL",
            "Scope": ""
        },
        "HTTP Journal":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"/var/log/codeine/",
            "Postfix": ".json",
            "Format": "Formats.JSON"
        },
        "Keys":
        {
            "Driver": "IO.Storage.FileSystem",
            "Directory": "Keys"
        },
        "DNS":
        {
            "Driver": "IO.DNS"
        }
    },
    "Hooks":
    {
        "beforeIOWrite":
        {
            "Check Journal flag":
            {
                "Service": "IO.Hooks.Journal",
                "Method": "beforeIOWrite"
            },
            "Check ReadOnly flag":
            {
                "Service": "IO.Hooks.ReadOnly",
                "Method": "beforeIOWrite"
            }
        }
    }
}
