{
    "Storages":
    {
        "Layout":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Postfix": ".html"
        },
        "Locale":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Format": "Formats.JSON",
            "Postfix":".json"
        },
        "Image":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets"
        },
        "Image Cache":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"/var/tmp/codeine/$Project.id",
            "Scope": "cache/img",
            "IO":
            {
                "FileSystem":
                {
                    "Hashing":
                    {
                        "Enabled": true,
                        "Levels": 4
                    }
                }
            }
        },
        "LESS":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Postfix":".less"
        },
        "SASS":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Postfix":".scss"
        },
        "CSS":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Postfix":".css"
        },
        "CSS Cache":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"/var/tmp/codeine/$Project.id",
            "Scope": ["cache/css"],
            "IO":
            {
                "FileSystem":
                {
                    "Hashing":
                    {
                        "Enabled": true,
                        "Levels": 4
                    }
                }
            }
        },
        "JS":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"Assets",
            "Postfix":".js"
        },
        "JS Cache":
        {
            "Driver":"IO.Storage.FileSystem",
            "Directory":"/var/tmp/codeine/$Project.id",
            "Scope": "cache/js",
            "IO":
            {
                "FileSystem":
                {
                    "Append Host": true,
                    "Hashing":
                    {
                        "Enabled": true,
                        "Levels": 4
                    }
                }
            }
        }
    }
}