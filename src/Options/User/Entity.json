{
    "EV": 6,
    "Slug":
    {
        "Entity": "user/",
        "Entities": "users"
    },
    "Mixins":
    [
        "Mixins.ID.Sequence",
        "Mixins.Titled",
        "Mixins.EMail",
        "Mixins.UGC",
        "Mixins.Filled",
        "Mixins.Verifiable",
        "Mixins.Channel"
    ],
    "Storage": "Primary",
    "EPP": 20,
    "Nodes":
    {
        "EMail":
        {
            "Required": true
        },
        "Status":
        {
            "Type": "Ternary",
            "Default": 1
        },
        "Password":
        {
            "Type": "Literal.Password",
            "Required": true,
            "Widgets":
            {
                "Write":
                {
                    "Type": "Form.Password.Two"
                }
            }
        },
        "Age":
        {
            "Hooks":
            {
                "beforeEntityWrite":
                {
                    "Service": "User.Entity",
                    "Method": "Age"
                }
            }
        },
a        "Gravatar":
        {
            "Type": "Literal.String",
            "Hooks":
            {
                "afterEntityRead":
                {
                    "Service": "User.Avatar.Gravatar",
                    "Method": "Get"
                }
            }
        }
    },
    "Hooks":
    {
        "beforeDeleteGet":
        {
            "Store URL":
            {
                "Service": "System.Interface.HTTP",
                "Method": "StoreURL"
            }
        },
        "afterDeletePost":
        {
            "Restore URL":
            {
                "Service": "System.Interface.HTTP",
                "Method": "RestoreURL"
            }
        },
        "afterCreatePost":
        {
            "Redirect":
            {
                "Service": "System.Interface.HTTP",
                "Method": "Redirect",
                "Call":
                {
                    "Redirect": "/"
                }
            }
        },
        "afterUserLoginDo":
        {
            "Restore URL":
            {
                "Service": "System.Interface.HTTP",
                "Method": "RestoreURL"
            }
        }
    }
}