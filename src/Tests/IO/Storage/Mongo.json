{
    "Apply":
    {
        "Storages":
        {
            "TestMongoStorage":
            {
                "Driver": "IO.Storage.Mongo",
                "Mongo":
                {
                    "Server": "codeine-mongo",
                    "Database": "codeine",
                    "Connect":
                    {
                        "username": "codeine",
                        "password": "test-password"
                    }
                }
            }
        }
    },
    "Suites":
    {
        "Positive":
        {
            "Open":
            {
                "Run":
                {
                    "Service": "IO",
                    "Method": "Open",
                    "Call":
                    {
                        "Storage": "TestMongoStorage"
                    }
                },
                "-Assert":
                {
                    "InstanceOf": "Mongo"
                }
            },
            "Create":
            {
                "Run":
                {
                    "Service": "IO",
                    "Method": "Write",
                    "Call":
                    {
                        "Storage": "TestMongoStorage",
                        "Scope": "TestScope",
                        "Data":
                        {
                            "ID": "TestID",
                            "Key 1": "Value A",
                            "Key 2": "Value B",
                            "Key 3":
                            {
                                "Sub key 31": 7,
                                "Sub key 32": null
                            }
                        }
                    }
                },
                "Assert":
                {
                    "Equal":
                    {
                        "Expected":
                        {
                            "ID": "TestID",
                            "Key 1": "Value A",
                            "Key 2": "Value B",
                            "Key 3": {
                                "Sub key 31": 7
                            }
                        }
                    }
                }
            },
            "Read":
            {
                "Run":
                {
                    "Service": "IO",
                    "Method": "Read",
                    "Call":
                    {
                        "Storage": "TestMongoStorage",
                        "Scope": "TestScope",
                        "Where":
                        {
                            "ID": "TestID"
                        },
                        "Limit":
                        {
                            "From": 0,
                            "To": 1
                        }
                    }
                },
                "Assert":
                {
                    "Equal":
                    {
                        "Expected":
                        [
                            {
                                "ID": "TestID",
                                "Key 1": "Value A",
                                "Key 2": "Value B",
                                "Key 3": {
                                    "Sub key 31": 7
                                }
                            }
                        ]
                    }
                }
            },
            "Read one field":
            {
                "Run":
                {
                    "Service": "IO",
                    "Method": "Read",
                    "Call":
                    {
                        "Storage": "TestMongoStorage",
                        "Scope": "TestScope",
                        "Fields": ["Key 1"],
                        "Where":
                        {
                            "ID": "TestID"
                        },
                        "Limit":
                        {
                            "From": 0,
                            "To": 1
                        }
                    }
                },
                "Assert":
                {
                    "Equal":
                    {
                        "Expected":
                        [
                            {
                                "Key 1": "Value A"
                            }
                        ]
                    }
                }
            },
            "Delete":
            {
                "Run":
                {
                    "Service": "IO",
                    "Method": "Write",
                    "Call":
                    {
                        "Storage": "TestMongoStorage",
                        "Scope": "TestScope",
                        "Where": {
                            "ID": "TestID"
                        },
                        "Data": null
                    }
                }
            }
        }
    }
}